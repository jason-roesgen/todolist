# EditorConfig is awesome: https://EditorConfig.org


# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
tab_width = 2
charset = utf-8

# 4 space indentation
[*.{py,sh,php,yaml}]
indent_style = space
indent_size = 4

# Tab indentation
[Makefile]
indent_style = tab
